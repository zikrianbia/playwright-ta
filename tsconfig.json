{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@pages/*": [
                "pages/*"
            ],
            "@fixtures/*": [
                "fixtures/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@test-data/*": [
                "test-data/*"
            ]
        }
    },
    "include": [
        "tests/**/*.ts",
        "pages/**/*.ts",
        "fixtures/**/*.ts",
        "utils/**/*.ts",
        "test-data/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}